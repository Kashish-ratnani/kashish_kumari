@model kashish_kumari.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<style>
    .delete-container {
        width: 100%;
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f5f5f5; /* Light gray background */
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Soft shadow effect */
    }

        .delete-container h1 {
            text-align: center;
            color: #333; /* Dark gray color for headings */
            margin-bottom: 20px;
        }

        .delete-container h3 {
            text-align: center;
            color: #007bff; /* Bootstrap primary color for paragraphs */
            margin-bottom: 20px;
        }

        .delete-container .row {
            margin-bottom: 15px;
        }

        .delete-container .col-sm-2 {
            font-weight: bold;
        }

        .delete-container .col-sm-10 {
            padding-left: 15px;
        }

    .delete-btn {
        margin-right: 10px;
        background-color: #dc3545; /* Bootstrap danger color for delete button */
        border-color: #dc3545;
    }

        .delete-btn:hover {
            background-color: #c82333; /* Darker shade on hover */
            border-color: #c82333;
        }

    .back-link {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #007bff; /* Bootstrap primary color for back link */
        text-decoration: none;
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<div class="delete-container">
    <h1>DELETE ACCOUNT</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Student</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Semester)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Semester)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Age)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Contact)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Contact)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger delete-btn" /> |
            <a asp-action="Index" class="back-link">Back to List</a>
        </form>
    </div>
</div>
