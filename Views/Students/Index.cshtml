@model IEnumerable<kashish_kumari.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<style>
    /* Styling for the table */
    .table-container {
        width: 100%;
        margin: 20px auto;
        border-radius: 10px;
        overflow: hidden;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        overflow-x: auto;
    }

        .table th, .table td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #f0f8ff; /* Light blue background for header */
            color: #333; /* Dark gray color for header text */
            font-weight: bold;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f9f9f9; /* Alternate row background color */
        }

        .table tbody tr:hover {
            background-color: #e6f7ff; /* Lighter blue background on hover */
        }

    /* Styling for buttons */
    .btn {
        padding: 8px 16px;
        border: 1px solid #007bff; /* Blue border for buttons */
        background-color: #007bff; /* Blue background for buttons */
        color: #fff; /* White text color for buttons */
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #0056b3; /* Darker shade of blue on hover */
            border-color: #0056b3; /* Darker shade of blue on hover */
        }
</style>

<h1>Student Information</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Semester)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contact)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Semester)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contact)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
