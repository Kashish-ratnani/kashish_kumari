@model kashish_kumari.Models.Student

@{
    ViewData["Title"] = "Details";
}

<style>
    .details-container {
        width: 100%;
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f4f4f4; /* Light gray background */
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Soft shadow effect */
    }

         h1,
        .details-container h4 {
            text-align: center;
            color: #3b5998; /* Facebook blue color */
            margin-bottom: 20px;
        }

        .details-container hr {
            margin-top: 10px;
            margin-bottom: 20px;
            border-color: #3b5998; /* Facebook blue color */
        }

        .details-container .row {
            margin-bottom: 15px;
        }

        .details-container .col-sm-2 {
            font-weight: bold;
            color: #333; /* Dark gray color */
        }

        .details-container .col-sm-10 {
            padding-left: 15px;
            color: #555; /* Medium gray color */
        }

    .details-links {
        text-align: center;
        margin-top: 20px;
    }

        .details-links a {
            margin-right: 10px;
            color: #dc3545; /* Bootstrap danger color */
            text-decoration: none;
        }

            .details-links a:hover {
                text-decoration: underline;
            }
</style>

    <h1>DETAILS</h1>
<div class="details-container">

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Semester)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Semester)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Age)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Contact)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Contact)
            </dd>
        </dl>
    </div>

    <div class="details-links">
        <a asp-action="Edit" asp-route-id="@Model?.Id" style="color: #17a2b8;">Edit</a> | <!-- Aqua color -->
        <a asp-action="Index" style="color: #28a745;">Back to List</a> <!-- Green color -->
    </div>
</div>
